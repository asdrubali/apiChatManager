{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["src/api/whatsapp/@types/*", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts", // Carpeta src y sus subcarpetas con archivos .ts
    "index.ts" // Archivo index.ts
  ],
  "exclude": ["node_modules"]
}
